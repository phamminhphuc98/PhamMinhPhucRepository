@model ShopCaPhe.Models.SANPHAM
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<style>
    .btncreate {
        background-color: red;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }

    th {
        background-color: #17aa67;
        color: white;
    }

    table {
        border: solid 1px white;
    }

    td {
        background-color: white;
    }

    .table-bordered {
        text-align: center;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="w3-container w3-brown">
        <h2>@ShopCaPhe.Language.Resource.ideleteproduct</h2>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@ShopCaPhe.Language.Resource.iproductname</th>
                <th>@ShopCaPhe.Language.Resource.iprice</th>
                <th>@ShopCaPhe.Language.Resource.isumary</th>
                <th>@ShopCaPhe.Language.Resource.iimg</th>
                <th>@ShopCaPhe.Language.Resource.istatus</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.TenSP)
                </td>
                <td>  @Html.DisplayFor(model => model.DonGia)</td>

                <td>
                    @Html.DisplayFor(model => model.SoLuong)
                </td>
                <td><img width="15%" src="~/Images/@Html.DisplayFor(model =>model.HinhMinhHoa)" /></td>
                <td>
                    @Html.DisplayFor(model => model.TrangThai)
                </td>
            </tr>
        </tbody>
    </table>


    <button type="button" style=" width:13%; background-color:gray; border:solid 1px gray" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("IndexAdmin", "AdminCRUD")'">@ShopCaPhe.Language.Resource.iback</button> <input type="submit" style=" width:13%" class="btn btn-primary" value="Xóa" />

}
