@using ShopCaPhe.Models
@{
    ViewBag.Title = "ThongKe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="table-responsive">
    <select id="year" class="dropdown" name="nam">
        <option value="#">Chọn Năm</option>
        <option value="2019">2019</option>
    </select>
    <select id="month" class="dropdown" name="thang">
        <option value="Ký">Chọn Tháng</option>
        <option value="10">10</option>
        <option value="11">11</option>
    </select>
    <input type="submit" class="btncreate" onclick="Thongke()" style="width:165px; background-color:#17aa67" value="Tạo Sản Phẩm" />

    <table class="table thongkehoadon">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Mã khách hàng</th>
                <th>Tên khách hàng</th>
                <th>Điện thoại</th>
                <th>Địa chỉ</th>
                <th>Đơn giá</th>
                <th>Ngày đặt</th>
                <th>Ngày giao</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>@item.SoDH</td>
                    <td>@item.MaKH</td>
                    <td>@item.TenNguoiNhan</td>
                    <td>@item.DienThoaiNhan</td>
                    <td>@item.DiaChiNhan</td>
                    <td>@item.TriGia</td>
                    <td>@item.NgayDH</td>
                </tr>
            }

        </tbody>
    </table>
    <span>Tong Tien: @Session["TongDG"]</span>
</div>
