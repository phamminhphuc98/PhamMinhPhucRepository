@using ShopCaPhe.Models
@model List<KHACHHANG>
@{
    Layout = null;
}
<p>Tiến trình thanh toán</p>

@foreach (var dg in Model)
{

    <table>
        <tbody>
            <tr>
                <td>Tên người nhận</td>
                <td><input type="text" name="tennguoinhan" id="tennguoinhan" value="@dg.HoTenKH" required/></td>
            </tr>
            <tr>
                <td>Địa chỉ nhận hàng</td>
                <td><input type="text" name="diachinhanhang" id="diachinhanhang" value="@dg.DiaChiKH" required /></td>
            </tr>
            <tr>
                <td>Điện thoại nhận hàng</td>
                <td>
                    <input type="text" name="dienthoainhanhang"
                           class="form-control"
                           id="exampleInputPassword1"
                           pattern="(\+84|0)\d{9,10}"
                           title="Nhập số điện thoại từ 10 đến 11 số" value="@dg.DienThoaiKH" required />
                </td>
            </tr>
            <tr>
                <td>Giới tính</td>
                <td><input type="text" id="gioitinh" name="gioitinh" value="@dg.GioiTinh" required/></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input style="padding: 5px; font-size: 17px;border: none; width:100%; border-bottom: 1px solid #dfe2d7;" type="email" id="email" name="email" value="@dg.Email" required /></td>
            </tr>
            <tr>
                <td>Ngày nhận hàng</td>
                <td>
                    <span id="ngaynhanhang"></span>

                </td>
            </tr>
            <tr>
                <td></td>
                <td>Tổng tiền cần thanh toán: @Session["TongTien"] VNĐ</td>
            </tr>
        </tbody>
    </table>
}


<input onclick="return check1()" type="submit" value="Đặt hàng" />

<script type="text/javascript">
    var day = new Date();
    var d = day.getDate() + 2;
    var m = day.getMonth() + 1;
    var y = day.getFullYear();
    document.getElementById('ngaynhanhang').innerHTML = d + "/" + m + "/" + y;
</script>
<script>
    function check1() {
        var x = document.forms["myForm"]["tennguoinhan"].value;
        var y = document.forms["myForm"]["diachinhanhang"].value;
        var z = document.forms["myForm"]["dienthoainhanhang"].value;
        var k = document.forms["myForm"]["gioitinh"].value;
        var g = document.forms["myForm"]["email"].value;

        if (x == "" || y == "" || z == "" || g == "" || k == "") {
            alert("Vui lòng điền đầy đủ thông tin trước khi tiến hành thanh toán");
            return false;
        }
    }


</script>