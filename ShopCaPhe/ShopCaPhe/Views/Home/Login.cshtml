@model ShopCaPhe.Models.KHACHHANG
@{
    Layout = null;
}

<!DOCTYPE html>
<title>Login</title>
<html>

<head>
    <link href="~/Content/LoginAdmin.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>LoginAdmin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <script>
        function validateLogin() {
            var x = document.forms["myForm"]["TenDN"].value;
            var y = document.forms["myForm"]["MatKhau"].value;

            if (x == "" || y == "") {
                alert("You need enter Email and Password");
                return false;
            }
        }
        function disablelogin() {
            document.getElementById("TenDN").disabled = true;
            document.getElementById("MatKhau").disabled = true;
        }

    </script>


</head>
<body>
    <style>
    </style>
    <div class="login-ad">
        <!--Sử dụng beginform truy vấn đến phường thức post-->
        <form action="#" method="post" name="myForm">

            <div class="icon">
                <div class="icon1">
                    <i class="fa fa-user" style="font-size:30px"></i>

                </div>
                @if (ViewBag.error != null)
                {
                    <p style="color:red">@ViewBag.error</p>

                }
                else
                {
                    <p style="color:white">Hi there! Please Sign in</p>


                }



            </div>
            <div class="div-login">
                <input class="input-validation-error text-box single-line" data-val="true" id="TenDN" name="TenDN" placeholder="Email" type="text" value="">
            </div>
            <div class="div-login">
                <input type="text" class="input-validation-error text-box single-line" data-val="true" id="MatKhau" name="MatKhau" placeholder="Password" value="">
            </div>
            <div>
            </div>
            <div class="div-login"> <button name="btnlogin" id="btnlogin" onclick="return validateLogin()"><i class='fas fa-arrow-right' style="font-size:24px; color:white"></i></button> </div>
            @*<button id="=btnlogin" onclick="return validateLogin()">Login</button>*@
        </form>


    </div>
</body>
</html>
