@using ShopCaPhe.Models
@model List<SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCaPhe.cshtml";
}

<link href="~/Content/Index.css" rel="stylesheet" />
<div class="title">

    <h6>TẤT CẢ SẢN PHẨM</h6>
    <hr>
</div>
<div class="book-content">
    @*@{ int i = 0;}*@
    @foreach (var item in Model)
    {
        //i++;
            <div id="sanpham">
                <div id="anhbia"><img src="~/Images/@item.HinhMinhHoa" /></div>
                <div id="tensach">@item.TenSP</div>
                <div id="tieude">
                    @item.LOAISP.TenLoai
            </div>
            <div class="price">
                <span id="agia">@item.DonGia đ</span>

            </div>
                <div class="tooltip-content">
                    <ul>
                        <li class="tooltip-li li1"><a id="txtmua" onclick="DatHang(@item.MaSP)"><i class="fa fa-shopping-basket"></i></a></li>
                        <li class="tooltip-li li2"><a><i class="fa fa-exchange"></i></a></li>
                        <li class="tooltip-li li3"><a href="~/ViewSP/ChiTietSanPham?MaSP=@item.MaSP"><i class="fa fa-eye" style="color:black"></i></a></li>
                    </ul>

                </div>
            </div>
        @*if(i % 6 == 0 )
            {
                <div style="clear:both"></div>
            }*@
    }
</div>

