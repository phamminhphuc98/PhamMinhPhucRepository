
@using ShopCaPhe.Models;
@model List<SANPHAM>

<h6><strong>MÁY XAY CÀ PHÊ</strong></h6>
<hr />
<form action="/Home/Index" method="post">
    <div class="book-content">
        @*@{ int i = 0;}*@
        @foreach (var item in Model)
        {
            //i++;
            <div id="sanpham">
                <div id="anhbia"><img src="~/Images/@item.HinhMinhHoa" /></div>
                <div id="tensach">@item.TenSP</div>
                <div id="tieude">
                    @item.LOAISP.TenLoai
                </div>
                <div class="price">
                    <span id="agia">@item.DonGia đ</span>

                </div>
                <div class="tooltip-content">
                    <ul>
                        <li class="tooltip-li li1"><a id="txtmua" onclick="DatHang(@item.MaSP)"><i class="fa fa-shopping-basket"></i></a></li>
                        <li class="tooltip-li li2"><a id="myBtn" onclick="Poppup(@item.MaSP)"><i class="fa fa-exchange"></i></a></li>
                        <li class="tooltip-li li3"><a href="~/ViewSP/ChiTietSanPham?MaSP=@item.MaSP"><i class="fa fa-eye" style="color:black"></i></a></li>
                    </ul>

                </div>
            </div>
            <div id="myModal" class="modal">
                Modal content
                <div class="modal-content">
                    <div class="modal-header">
                        <h2>THÔNG TIN SẢN PHẨM</h2>
                        <span class="close">&times;</span>

                    </div>
                    <div class="modal-body">
                        <p>@item.MaSP</p>
                        <p>zzzzz</p>
                        <p>zzzzz</p>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>

        }
    </div>
</form>

