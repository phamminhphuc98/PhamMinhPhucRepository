
@{
    ViewBag.Title = "Quenmatkhau";
    Layout = "~/Views/Shared/_LayoutCaPhe.cshtml";
}

<link href="~/Content/EditUser1.css" rel="stylesheet" />
<style>
    input[type=text] {
        color: black;
    }
</style>
<style>
    #exampleInputPassword1 {
        width: 100%;
    }

    .btncreate {
        background-color: black;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        color: white;
    }
</style>

<div class="form-style-5" style="height:300px; border:solid 1px black">
    <form action="/Home/quenmatkhau" method="post" name="myForm">
        <h3 style="margin:0 7%">Quên mật khẩu</h3>
        <br />

        <fieldset>
            <label for="job">Nhập Email</label>
            <input type="email" name="To" class="form-control" id="exampleInputEmail1" style="width:100%; color:black" aria-describedby="emailHelp" value="" required>
            @if (ViewBag.loi != null)
            {
                <div style="margin-top:3px" class="alert alert-danger" role="alert">
                    @ViewBag.loi
                </div>
                <span style="visibility:hidden" id="sub">1</span>
            }
            else
            {
                <span style="visibility:hidden" id="sub">2</span>

            }

        </fieldset>
        <input style="width:50%; margin-top:3%;"  type="submit" value="Lưu" />

    </form>
</div>
